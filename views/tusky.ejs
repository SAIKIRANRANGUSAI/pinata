<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>üêã Walrus Image Uploader</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

  <style>
    body {
      background: linear-gradient(135deg, #dbeafe, #e0f2fe);
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 1000px;
      margin-top: 50px;
    }

    .card {
      border: none;
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-3px);
    }

    .upload-section {
      background: white;
      padding: 2rem;
      border-radius: 16px;
    }

    .img-preview {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 12px;
    }

    .img-card {
      border-radius: 12px;
      background: #fff;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .img-card:hover {
      transform: scale(1.03);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    }

    .img-info {
      padding: 10px 15px;
    }

    .storage-tag {
      display: inline-block;
      font-size: 12px;
      color: #fff;
      padding: 4px 10px;
      border-radius: 20px;
      background-color: #2563eb;
    }

    .footer {
      text-align: center;
      margin-top: auto;
      padding: 20px 0;
      color: #555;
    }

    .btn-primary {
      background-color: #2563eb;
      border: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #1d4ed8;
      transform: translateY(-1px);
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 20px;
      transition: 0.2s;
    }

    .back-btn:hover {
      text-decoration: underline;
      transform: translateX(-3px);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <a href="/" class="back-btn"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
      <h2 class="fw-bold text-primary mb-0">üêã Walrus Image Uploader</h2>
    </div>

    <p class="text-muted text-center mb-4">
      Upload and manage your images securely with <b>Walrus Decentralized Storage</b>.
    </p>

    <!-- Upload Form -->
    <div class="upload-section mb-5">
      <form id="uploadForm" action="/walrus/upload" method="POST" enctype="multipart/form-data">
        <div class="row g-3">
          <div class="col-md-10">
            <label class="form-label fw-semibold">Choose Image</label>
            <input type="file" name="file" id="file" accept="image/*" class="form-control" required />
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100 fw-semibold">Upload</button>
          </div>
        </div>
      </form>
    </div>

    <!-- Uploaded Images -->
    <h4 class="fw-semibold mb-4 text-center">üì∏ Uploaded Images</h4>
    <% if (images && images.length > 0) { %>
      <div class="row">
        <% images.forEach((img) => { %>
          <div class="col-md-4 mb-4">
            <div class="img-card">
              <img src="<%= img.remoteUrl %>" alt="<%= img.filename %>" class="img-preview"
                   onerror="this.src='https://placehold.co/300x200?text=Preview+Unavailable';" />
              <div class="img-info">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="fw-semibold text-truncate" title="<%= img.filename %>"><%= img.filename %></span>
                  <span class="storage-tag">WALRUS</span>
                </div>
                <a href="<%= img.remoteUrl %>" target="_blank" class="text-decoration-none small text-primary">View File</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No images uploaded yet.</p>
    <% } %>
  </div>

  <div class="footer">Built with ‚ù§Ô∏è using NestJS & Walrus Decentralized Storage</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
  <script>
    const form = document.getElementById('uploadForm');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button');
      btn.disabled = true;
      btn.innerText = 'Uploading...';

      const formData = new FormData(form);
      try {
        const response = await fetch('/walrus/upload', { method: 'POST', body: formData });
        if (response.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Upload Successful üéâ',
            text: 'Your image has been uploaded successfully to Walrus!',
            showConfirmButton: false,
            timer: 2000,
          });
          setTimeout(() => window.location.reload(), 2000);
        } else {
          const err = await response.text();
          Swal.fire({
            icon: 'error',
            title: 'Upload Failed üò¢',
            text: err || 'Something went wrong!',
          });
          btn.disabled = false;
          btn.innerText = 'Upload';
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Network Error',
          text: error.message || 'Could not connect to server.',
        });
        btn.disabled = false;
        btn.innerText = 'Upload';
      }
    });
  </script>
</body>
</html>
