<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      background: linear-gradient(to bottom right, #e0f2fe, #dbeafe);
      font-family: "Poppins", sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    header {
      background: linear-gradient(90deg, #2563eb, #1d4ed8);
      color: white;
      padding: 1rem 2rem;
      border-radius: 0 0 20px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    header a {
      text-decoration: none;
      color: white;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: 0.3s;
    }
    header a:hover {
      opacity: 0.85;
      transform: translateX(-3px);
    }
    .container {
      max-width: 1000px;
      padding-top: 60px;
      flex: 1;
    }
    .upload-box {
      border: 2px dashed #2563eb;
      border-radius: 12px;
      background-color: #fff;
      padding: 40px;
      text-align: center;
      transition: all 0.3s ease;
    }
    .upload-box:hover { background-color: #f0f9ff; }
    .btn-primary {
      background-color: #2563eb;
      border: none;
      border-radius: 8px;
      transition: 0.3s;
      font-weight: 600;
    }
    .btn-primary:hover {
      background-color: #1e40af;
      transform: translateY(-1px);
    }
    .footer {
      background-color: #f8fafc;
      color: #555;
      text-align: center;
      padding: 1rem 0;
      font-size: 0.9rem;
      border-top: 1px solid #e5e7eb;
    }
    .img-card img {
      border-radius: 10px 10px 0 0;
      object-fit: cover;
      height: 200px;
      width: 100%;
      transition: transform 0.3s ease;
    }
    .img-card:hover img { transform: scale(1.05); }
    .badge-walrus { background: #2563eb; }
  </style>
</head>

<body>
  <!-- Header -->
  <header>
    <h3 class="mb-0 fw-semibold d-flex align-items-center gap-2">
      üêã Walrus Image Uploader
    </h3>
    <a href="/" title="Back to Dashboard">
      <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
    </a>
  </header>

  <!-- Main Content -->
  <main class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold text-primary">Upload and Manage Images</h2>
      <p class="text-muted">Store images securely on <b>Walrus Decentralized Storage</b>.</p>
    </div>

    <!-- Upload Form -->
    <form id="uploadForm" class="card p-4 mb-5" enctype="multipart/form-data" method="post" action="/walrus/upload">
      <div class="upload-box">
        <h5>Drag & Drop or Select an Image</h5>
        <input type="file" name="file" accept="image/*" class="form-control mt-3 mb-3" required style="max-width:400px;margin:auto;">
        <button type="submit" class="btn btn-primary mt-2 px-4">
          <i class="bi bi-cloud-arrow-up"></i> Upload to Walrus
        </button>
      </div>
    </form>

    <!-- Uploaded Images -->
    <h4 class="fw-semibold mb-4 text-center">üì∏ Uploaded Files</h4>

    {{#if files.length}}
      <div class="row">
        {{#each files}}
          <div class="col-md-3 mb-4">
            <div class="card img-card">
              {{#if remoteUrl}}
                <img src="{{remoteUrl}}" alt="{{filename}}" onerror="this.src='https://placehold.co/300x200?text=No+Preview';">
              {{else}}
                <div class="p-4 text-center text-muted">No Preview Available</div>
              {{/if}}
              <div class="p-3">
                <p class="fw-semibold small mb-1 text-truncate" title="{{filename}}">{{filename}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">{{createdAt}}</span>
                  <span class="badge badge-walrus">WALRUS</span>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="text-center text-muted">No images uploaded yet.</p>
    {{/if}}
  </main>

  <!-- Footer -->
  <footer class="footer">
    ¬© {{currentYear}} ‚Äî Built with ‚ù§Ô∏è using NestJS & Walrus Decentralized Storage
  </footer>

  <!-- SweetAlert Upload Logic -->
  <script>
    document.querySelector('#uploadForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      Swal.fire({ title: 'Uploading...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

      try {
        const res = await fetch('/walrus/upload', { method: 'POST', body: formData });
        if (res.ok) {
          Swal.fire({ icon: 'success', title: 'Upload Successful üéâ', showConfirmButton: false, timer: 2000 });
          setTimeout(() => window.location.reload(), 2000);
        } else {
          Swal.fire({ icon: 'error', title: 'Upload Failed', text: await res.text() || 'Something went wrong!' });
        }
      } catch (err) {
        Swal.fire({ icon: 'error', title: 'Network Error', text: err.message || 'Could not connect to server.' });
      }
    });
  </script>
</body>
</html>
